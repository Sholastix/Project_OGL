<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Recipes</title>
</head>

<body>
    <h2>Рецепты</h2>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Content</th>
            </tr>
        </thead>

        <tbody>
            {{#each recipes}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.content}}</td>
                <td>
                    <a href="/recipes/recipeEdit/{{this.id}}">Edit</a>|
                    <form method="POST" action="/recipes/delete/{{this.id}}?_method=DELETE" style="display:inline;">
                        <input type="submit" value="Delete" />
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p><a href="/recipes/recipeCreate/">Create New Recipe</a></p><br>
    <p><a href="/main">HOMEPAGE</a></p>
</body>

</html>